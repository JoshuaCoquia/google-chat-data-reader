{
    "compilerOptions": {
        "target": "esNext",
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "outDir": "dist",
        "baseUrl": "./src",
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "composite": true,
        "lib": [
            "es6",
        ]
    },
    "include": [
        "src/**/*",
    ],
}