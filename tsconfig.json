{
    "compilerOptions": {
        "target": "ESNext",
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": "./src",
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": [
            "es6",
        ]
    },
    "include": [
        "src/**/*", "index.d.ts",
    ],
}